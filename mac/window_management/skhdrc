# open terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty

# close focused window
alt - w : chunkc tiling::window --close

#
# Focus
#

# Focus Window
alt + shift - j : chunkc tiling::window --focus prev
alt + shift - k : chunkc tiling::window --focus next

# Focus Monitor
alt + shift - u : chunkc tiling::monitor -f prev
alt + shift - i : chunkc tiling::monitor -f next

#
# Monitor
#

# Send Window to Desktop
alt + ctrl - j : chunkc tiling::window --send-to-desktop prev
alt + ctrl - k : chunkc tiling::window --send-to-desktop next

# Send Window to Monitor and Follow Focus
cmd + shift - u : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
cmd + shift - i : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next

#
# Desktop
#

# Move desktop
# Requires additional setup: `csrutil disable && sudo chunkwm --install-sa && csrutil enable`
# more info: https://koekeishiya.github.io/chunkwm/docs/sa.html
cmd + shift - h : chunkc tiling::desktop --move prev
cmd + shift - l : chunkc tiling::desktop --move next

#
# Layout
#

# toggle desktop offset
shift + alt - r : chunkc tiling::desktop --toggle offset

# toggle window fullscreen
shift + alt - f : chunkc tiling::window --toggle fullscreen
