echo "Import aliases"

# Common
alias ls=' ls -lah'
alias cping='ping -c 3 www.google.com'

# Docker
alias dockercompose="docker-compose"
alias docker_rm_exited="docker rm -v $(docker ps -a -q -f status=exited)"

# Whitespace to avoid history
alias cd=' cd'
alias ll=' ll'
alias ps=' ps'
alias vim=' vim'

 # Peco aliases
alias gco="git branch -a | peco | sed 's/remotes\/origin\///' | sed 's/*//' | xargs git co"
alias gtrack="git for-each-ref --format='%(refname:short) <- %(upstream:short)' refs/heads"
