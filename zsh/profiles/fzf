export FZF_DEFAULT_OPTS='--ignore-case --no-ignore --hidden --follow --exclude _build --exclude node_modules --exclude deps'
export FZF_DEFAULT_COMMAND='fd --ignore-case --no-ignore --hidden --follow --exclude _build --exclude node_modules --exclude deps'

# exclude git (does not work exclusively, for example .github will be excluded):
# --exclude '^.git$'

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export PATH="/usr/local/opt/python@3.7/bin:$PATH"
