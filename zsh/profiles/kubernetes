alias kubexec="kubectl get pods | tail -n +2 | peco | sed 's/ .*//g' | xargs -I{} -ot kubectl exec -ti {} bash"
alias kubelogs="kubectl get pods | tail -n +2 | peco | sed 's/ .*//g' | xargs -I{} -ot kubectl logs {}"
alias kubelogsf="kubectl get pods | tail -n +2 | peco | sed 's/ .*//g' | xargs -I{} -ot kubectl logs -f {}"
